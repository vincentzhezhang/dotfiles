[alias]
  ci = commit -v
  co = checkout
  st = status -sb
  br = branch -vv
  brr = "!f(){ \
    unbuffer \
    git for-each-ref \
    --sort='-committerdate' refs/heads/ \
    --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset)|\
      %(color:red)%(objectname:short)%(color:reset)|\
      %(color:green)%(committerdate:relative)%(color:reset)|\
      %(authorname)|\
      %(contents:subject)'; \
  }; f | column -ts \\|"
  last = log -1 HEAD
  sn = !bash -c 'git checkout -b snapshot_$(/usr/bin/env date "+%y%m%d_%H%M%S")'
  unstage = reset HEAD --
  un = reset HEAD --
  lg = log --graph --decorate --stat --date=iso --pretty=fuller
  summary = "!f(){ \
    git log \
    --oneline \
    --decorate='' \
    --abbrev-commit \
    --author=$(git config user.email) \
    --no-merges \
    --reverse \
    --since=$(date -u +\"%Y-%m-%dT00:00:00\") \
    --use-mailmap; \
  }; f"
  birth-info = log --diff-filter=A --
  review = "!f(){ git branch -f \"review/$1\" \"origin/$1\" && git checkout -f \"review/$1\"; }; f"
  finish-review = !bash -c 'git checkout -f master && git branch --no-color | cut -c 3- | grep "^review/" | xargs -r git branch -D'
  patch = !git --no-pager diff --no-color
[user]
  name = Vincent Zhang
  email = vincent.zhang@akunacapital.com
[github]
  user = vincentzhezhang
[gui]
  editor = gedit
  historybrowser = gitk
  diffcontext = 6
[core]
  editor = nvim
  autocrlf = input
  excludesfile = ~/.gitignore_global
[color]
  ui = auto
[color "branch"]
  current = cyan reverse
  local = cyan
  remote = magenta
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[credential]
  helper = cache --timeout=604800
[diff]
  tool = meld
[merge]
  tool = meld
[blame]
  date = format:%Y-%m-%d %H:%M
[push]
  default = simple
[cola]
	fontdiff = Fantasque Sans Mono,10,-1,5,50,0,0,0,0,0
  tabwidth = 2
  textwidth = 80
  boldheaders = true
  savewindowsettings = true
  blameviewer = git gui blame
  spellcheck = true
	expandtab = true
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[pager]
  diff = diff-so-fancy | less --tabs=4 -RFX
  show = diff-so-fancy | less --tabs=4 -RFX
[merge "tool"]
  path = nvim
[log]
  mailmap = true
[pull]
  rebase = true
[http]
  sslVerify = false
[submodule]
	recurse = true
