[MESSAGES CONTROL]
disable=
  bad-continuation,
  fixme,                        # this is manually handled
  invalid-name,
  missing-docstring,
  too-few-public-methods,
  wrong-import-order,           # this should be handled by isort
  logging-format-interpolation, # https://github.com/PyCQA/pylint/issues/1788#issuecomment-379175168
max-line-length=120
extension-pkg-whitelist=ujson

