[alias]
  br = branch -vv
  ci = commit -v
  co = checkout
  df = diff
  lg = log --graph --decorate --stat --date=relative-local --pretty=fuller
  st = status -sb
  unstage = reset HEAD --
[user]
  name = Vincent Zhang
  email = v.zh@msn.com
[github]
  user = vincentzhezhang
[core]
  editor = nvim
  autocrlf = input
  excludesfile = ~/.config/git/ignore
  pager = delta
[interactive]
  diffFilter = delta --color-only
[credential]
  # cache credential for 30 days
  helper = cache --timeout=2592000
[url "https://"]
  # prefer https over git
  insteadOf = git://
[blame]
  date = format:%Y-%m-%d %H:%M
[push]
  default = simple
[delta]
  features = unobtrusive-line-numbers decorations
  whitespace-error-style = 22 reverse
[delta "unobtrusive-line-numbers"]
  line-numbers = true
  line-numbers-minus-style = "#993333"
  line-numbers-zero-style = "#666666"
  line-numbers-plus-style = "#339933"
  line-numbers-left-format = "{nm:>4}┊"
  line-numbers-right-format = "{np:>4}│"
  line-numbers-left-style = blue
  line-numbers-right-style = blue
[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow ul
  file-decoration-style = none
  syntax-theme = ansi-dark
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[pager]
  tag = sort -V | fzf --height=50% --reverse --no-sort --tac
[mergetool]
  cmd = nvim -f -c \"Gdiff\" \"$MERGED\"
[log]
  mailmap = true
[pull]
  rebase = true
[submodule]
  recurse = true
[include]
  # handy injection point for environment specific override, e.g.
  # - workspace boxes have different settings for username/email
  path = ~/.config/git/local
