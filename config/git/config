[alias]
  br = branch -vv
  ci = commit -v
  co = checkout
  df = diff
  last = log -1 HEAD
  lg = log --graph --decorate --stat --date=relative-local --pretty=fuller
  root = rev-parse --show-toplevel
  st = status -sb
  test = !bash -c bbq
  un = reset HEAD --
  unstage = reset HEAD --
[user]
  name = Vincent Zhang
  email = v.zh@msn.com
[github]
  user = vincentzhezhang
[gui]
  editor = gedit
  historybrowser = gitk
  diffcontext = 10
[core]
  editor = nvim
  autocrlf = input
  excludesfile = ~/.config/git/ignore
  pager = delta
[interactive]
  diffFilter = delta --color-only
[color]
  ui = true
[color "branch"]
  current = cyan reverse
  local = cyan
  remote = magenta
[color "diff"]
  meta = yellow
  frag = magenta bold
  old = red bold
  new = green bold
  commit = yellow bold
  whitespace = red reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[credential]
  # cache credential for 30 days
  helper = cache --timeout=2592000
[url "https://"]
  # prefer https over git
  insteadOf = git://
[blame]
  date = format:%Y-%m-%d %H:%M
[push]
  default = simple
[delta]
  features = line-numbers decorations
  whitespace-error-style = 22 reverse
[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow ul
  file-decoration-style = none
  syntax-theme = ansi-dark
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[pager]
  tag = sort -V | fzf --height=50% --reverse --no-sort --tac
[mergetool]
  cmd = nvim -f -c \"Gdiff\" \"$MERGED\"
[log]
  mailmap = true
[pull]
  rebase = true
[submodule]
  recurse = true
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[http]
  sslVerify = false
