[alias]
  br = branch -vv
  ci = commit -v
  co = checkout
  last = log -1 HEAD
  lg = log --graph --decorate --stat --date=relative-local --pretty=fuller
  root = rev-parse --show-toplevel
  st = status -sb
  test = !bash -c bbq
  un = reset HEAD --
  unstage = reset HEAD --
